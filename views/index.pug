    //- integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" 
    //- crossorigin="anonymous")
    ent
  body
    div(class="container")
      form(action="/todos",method = "POST")
        input(type="text" name="todo" class="form-control")
        button(type="submit" class="btn btn-info btn-sm") Add todo 
      ul(class="list-group")
        if todos
          each todo in todos
            span(class= "flex")
              form(action="/todos/" + todo.id,method = "post")
                input(name="_method" type="hidden" value="put")
                span(class = "todo-item")
                  li(class="list-group-item")= todo.title
                  input(name="checkbox" type= "checkbox" checked= todo.completed id=todo.id)
                  button(type="submit" class="btn btn-dark btn-sm") Update Todo
                  
              span(class : "todo-delete")
                form(action="/todos/"+todo.id,method = "post")  
                    input(name="_method" type="hidden" value="delete")
                    button(type="submit" class="btn btn-warning btn-sm") delete todo

        else
          li= "No todos left"